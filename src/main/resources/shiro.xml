<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--自定义数据源-->
    <bean id="myRealm" class="cn.wolfcode.crm.realm.MyRealm"></bean>
    <!--配置安全管理器-->
    <bean id="securityManager" class="org.apache.shiro.web.mgt.DefaultWebSecurityManager">
        <property name="realm" ref="myRealm"/>
    </bean>
    <!--自定义过滤器-->
    <bean id="myfilter" class="cn.wolfcode.crm.web.filter.MyFormAuthenticationFilter"></bean>

    <!--配置shiro过滤器-->
    <bean id="shiroFilter" class="org.apache.shiro.spring.web.ShiroFilterFactoryBean">
        <property name="securityManager" ref="securityManager"/>
        <!--设置登录表单地址-->
        <property name="loginUrl" value="/login.do"/>
        <!--登录成功后重定向地址-->
        <property name="successUrl" value="/index.do"/>
        <!--没有权限时打开的页面-->
        <property name="unauthorizedUrl" value="/nopermission.jsp"/>
        <property name="filterChainDefinitions">
            <value>
                /static/**=anon
                /logout.do=logout
                /login.jsp=anon
                /**=authc
            </value>
        </property>
        <property name="filters">
            <map>
                <entry key="authc" value-ref="myfilter"/>
            </map>
        </property>
    </bean>

</beans>